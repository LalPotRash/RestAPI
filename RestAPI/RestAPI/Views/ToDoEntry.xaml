<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="RestAPI.Views.ToDoEntry"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="APIs">
    <StackLayout>
        <StackLayout>
            <ListView x:Name="listView" ItemTapped="listView_ItemTapped" BackgroundColor="Black">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding API}" TextColor="Orange" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</ContentPage>